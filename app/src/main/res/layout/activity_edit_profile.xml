<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_bg"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="64dp"
            android:text="Editar Perfil"
            android:textColor="@color/text_primary"
            android:textSize="36sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Nome e Sobrenome"
            android:backgroundTint="@color/sky_blue"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/inputRGM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="RGM"
            android:backgroundTint="@color/sky_blue"
            android:padding="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/inputPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Senha"
                android:backgroundTint="@color/sky_blue"
                android:padding="12dp"
                android:inputType="textPassword" /> <!-- Define o tipo de entrada como senha -->

            <Button
                android:id="@+id/buttonTogglePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/sky_blue"
                android:text="Mostrar" /> <!-- Margem para separar do EditText -->
        </LinearLayout>

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:backgroundTint="@color/sky_blue"
            android:text="Salvar"
            android:textColor="@color/text_primary"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>